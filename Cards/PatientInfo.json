{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Patient Details",
      "weight": "bolder",
      "size": "medium"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://pbs.twimg.com/profile_images/3647943215/d7f12830b3c17a5a9e4afcc370e3a37e_400x400.jpeg",
              "size": "small",
              "style": "person"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "#PatientName",
              "weight": "bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "spacing": "none",
              "text": "#CreatedDate",
              "isSubtle": true,
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "#PatientDetails",
      "wrap": true
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Patient Id:",
          "value": "#PatientId"
        },
        {
          "title": "DOB:",
          "value": "#PatientDOB"
        },
        {
          "title": "Address:",
          "value": "#PatientAddress"
        },
        {
          "title": "Contact Number:",
          "value": "#PatientContactNumber"
        },
        {
          "title": "Age:",
          "value": "#Age"
        }
      ]
    }
  ]
}